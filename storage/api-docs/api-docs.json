      {
        "name": "id",
        "in": "query",
        "required": true,
        "schema": { "type": "integer" },
        "example": 1
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "Lunes": { "type": "string", "example": "08:00 - 16:00" },
              "Martes": { "type": "string", "example": "08:00 - 16:00" },
